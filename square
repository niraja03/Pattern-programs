//square pattern problem
#include <iostream>
using namespace std;

int main() {
    int n=10;
    for(int i=1; i<=n; i++)
    {
        for(int j=1; j<=i; j++) /* traingle(increasing) in nl-- s-1,sp-i 
        and for triangle(decreasing) in nl-- s-i, sp-n */
        {
            cout<<"* ";
        }    
        cout<<"\n";
    }
    

    return 0;
}
//outer loop--rows, inner loop--columns
